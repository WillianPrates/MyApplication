<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Presenter.PokeList">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerPoke"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-77dp"
        tools:layout_editor_absoluteY="347dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        style="@style/Button"
        android:id="@+id/bt_deslogar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily=""
        android:text="Sign Out"
        android:textColor="@color/black"
        android:backgroundTint="#85FFFFFF"
        android:textAllCaps="false"
        android:padding="0dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/textPesquisaPokemon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Pesquisar"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_pesquisarPokemon"
        style="@style/Button"
        android:layout_width="43dp"
        android:layout_height="38dp"
        android:backgroundTint="#85FFFFFF"
        android:drawableStart="@drawable/ic_search"
        android:layout_marginTop="0dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toTopOf="@id/textPesquisaPokemon"
        app:layout_constraintEnd_toEndOf="@id/textPesquisaPokemon" />


</androidx.constraintlayout.widget.ConstraintLayout>